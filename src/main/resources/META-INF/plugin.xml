<idea-plugin>
    <id>sql-joining-graph</id>
    <name>SqlJoinGraph</name>
    <version>1.0</version>
    <vendor email="stzhangjk@163.com" url="http://www.sqljoininggraph.com">stzhangjk</vendor>

    <description><![CDATA[
      <h2>Overview</h2>
      By scanning selected code for SQL strings, my tool generates a graph that shows the relationships of columns between tables based on join and where conditions in the SQL.
      <br/>
      <h2>Usage</h2>
      Just right click at your source file or directory where contains sql string (only supporting java String field for now),
      <br/>
      and click <strong>'generate sql joining graph'</strong>.
      <h2>Limitation</h2>
      Only Scanning java String field for now.
      <h2>Thanks For</h2>
      thanks for plugin 'Java2SQL'.
    ]]></description>

    <change-notes><![CDATA[
      Only Supporting java String field for now.
    ]]>
    </change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <!--  <depends>com.intellij.modules.java</depends>-->
    <!--  <depends>com.intellij.java</depends>-->
    <depends>Java2SQL</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <toolWindow id="sql-join-graph" anchor="right" factoryClass="com.stzhangjk.ideaplugin.whojoinwho.ui.SqlJoiningGraphToolWindowFactory" />

        <projectService serviceImplementation="com.stzhangjk.ideaplugin.whojoinwho.service.SqlJoiningGraphSettingsService"/>

        <notificationGroup id="SqlJoiningGraph Notification Group"
                           displayType="BALLOON"
                           key="notification.group.name"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action class="com.stzhangjk.ideaplugin.whojoinwho.SqlJoiningGraphAction"
                text="generate sql joining graph">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="AnalyzeMenu"/>
        </action>
    </actions>

</idea-plugin>