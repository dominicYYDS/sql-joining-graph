<idea-plugin>
    <id>com.stzhangjk.ideaplugin.whojoinwho</id>
    <name>who-join-who</name>
    <version>1.0</version>
    <vendor email="stzhangjk@163.com" url="http://www.yourcompany.com">stzhangjk</vendor>

    <description><![CDATA[
      By scanning selected code for SQL strings, my tool generates a graph that shows the relationships of columns between tables based on join and where conditions in the SQL.
    ]]></description>

    <change-notes><![CDATA[
      Supporting java String field for now.
    ]]>
    </change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <!--  <depends>com.intellij.modules.java</depends>-->
    <!--  <depends>com.intellij.java</depends>-->
    <depends>Java2SQL</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <toolWindow id="who-join-who" anchor="right" factoryClass="com.stzhangjk.ideaplugin.whojoinwho.ui.WhoJoinWhoToolWindowFactory" />

        <projectService serviceImplementation="com.stzhangjk.ideaplugin.whojoinwho.service.WhoJoinWhoSettingsService"/>

        <notificationGroup id="WhoJoinWho Notification Group"
                           displayType="BALLOON"
                           key="notification.group.name"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action class="com.stzhangjk.ideaplugin.whojoinwho.WhoJoinWhoAction"
                text="WhoJoinWho">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="AnalyzeMenu"/>
        </action>
    </actions>

</idea-plugin>